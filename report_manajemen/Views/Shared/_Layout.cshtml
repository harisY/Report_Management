<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BJA - REPORT MANAGEMENT", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accounting <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Laporan Perkiraan", "IndexLaporanPerkiraan", "Report")</li>
                            <li>@Html.ActionLink("Laporan Aging Piutang", "IndexLaporanAgingPiutang", "Report")</li>
                            <li>@Html.ActionLink("Laporan Aging Hutang", "", "")</li>
                            <li>@Html.ActionLink("Laporan Aging Piutang Rekap", "", "")</li>
                            <li>@Html.ActionLink("Laporan Bukti Bank Keluar", "", "")</li>
                            <li>@Html.ActionLink("Laporan Bukit Bank Masuk", "", "")</li>
                            <li>@Html.ActionLink("Laporan Buku Pembantu Hutang", "", "")</li>
                            <li>@Html.ActionLink("Laporan Buku Pembantu Piutang", "", "")</li>
                            <li>@Html.ActionLink("Laporan Pengajuan Dana", "", "")</li>
                            <li>@Html.ActionLink("Laporan Kwitansi Penjualan", "", "")</li>
                            <li>@Html.ActionLink("Laporan Buku Besa", "", "")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
